<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TemPloy.Views.RegisterJobSeeker"
             BackgroundColor="#40006b">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Job Seeker" FontSize="Large" HorizontalTextAlignment="Center"/>
                <Image x:Name="image" WidthRequest="180" HeightRequest="180"/>
                <Button x:Name="pickphoto" Text="Profile Picture" HorizontalOptions="Center" WidthRequest="200"/>
                <Label x:Name="Name" Text="Name"/>
                <Entry x:Name="name" Placeholder="Name" BackgroundColor="#7c7cff" TextColor="Black"/>
                <Label Text="Username" />
                <Entry x:Name="username" Placeholder="Username" />
                <Label Text="Password" />
                <Entry x:Name="password" Placeholder="Password" />
                <Label Text="Email" />
                <Entry x:Name="email" Placeholder="Email" />
                <Button x:Name="btn_register" Text="Register" Clicked="SubmitRegisterJobSeeker" />
             </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>